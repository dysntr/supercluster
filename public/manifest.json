{
  "manifest_version": 3,
  "short_name": "XMTP Chat Extension",
  "author": "Supercluster",
  "name": "XMTP Chat Extension",
  "version": "0.1.0",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "permissions": [
    "identity",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "mode": "module"
  }
}
